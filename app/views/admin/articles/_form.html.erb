<%= flash_message(resource: form.object) %>

<div class="form-group">
  <%= form.label :title, class: 'small mb-1' %>
  <%= form.text_field :title, class: 'form-control py-4', placeholder: 'Title' %>
</div>
<div class="form-group">
  <%= form.label :content, class: 'small mb-1' %>
  <%= form.text_area :content, class: 'form-control py-4', placeholder: 'Content' %>
</div>
<div class="card mb-4">
  <div class="card-header">
    Meta Tags
  </div>
  <div class="card-body">
    <div class="form-group">
      <%= form.label :meta_keywords, class: 'small mb-1' %>
      <%= form.text_field :meta_keywords, class: 'form-control py-4', placeholder: 'blog, seo, keyword' %>
    </div>
    <div class="form-group">
      <%= form.label :meta_description, class: 'small mb-1' %>
      <%= form.text_area :meta_description, class: 'form-control py-4', placeholder: 'Description' %>
    </div>
  </div>
</div>
<div class="d-flex align-items-center justify-content-between">
  <div class="form-group">
    <div class="form-check">
      <%= form.check_box :published, class: 'form-check-input' %>
      <%= form.label :published, class: 'form-check-label' %>
    </div>
  </div>
  <div class="form-group">
    <%= link_to('Discard and back to list', admin_articles_path, class: 'btn btn-link') %>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
</div>
