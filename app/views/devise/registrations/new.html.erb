<div id="layoutAuthentication_content">
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-5">
          <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Sign Up</h3></div>
              <div class="card-body">
                <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <%= f.label :email, class: 'small mb-1' %><br />
                    <%= f.email_field :email,
                                      autocomplete: "email",
                                      autofocus: true,
                                      class: 'form-control py-4',
                                      placeholder: 'Email address' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password, class: 'small mb-1' %><br />
                    <%= f.password_field :password,
                                         autocomplete: "new-password",
                                         class: 'form-control py-4',
                                         placeholder: 'Password' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password_confirmation, class: 'small mb-1' %><br />
                    <%= f.password_field :password_confirmation,
                                         autocomplete: "new-password",
                                         class: 'form-control py-4',
                                         placeholder: 'Re-type password' %>
                  </div>
                  <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                    <%= f.submit 'Sign Up', class: 'btn btn-primary btn-block' %>
                  </div>
                <% end %>
              </div>
              <div class="card-footer text-center">
                <div class="small">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
