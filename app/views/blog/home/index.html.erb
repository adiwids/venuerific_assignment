<header class="masthead" style="background-image: url('<%= image_path('home-bg.jpg') %>');">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Clean Blog</h1>
          <span class="subheading">A Blog Theme by Start Bootstrap</span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <%= render partial: 'blog/articles/preview' %>
        <div class="clearfix">
          <%= link_to(articles_path, class: 'btn btn-primary float-right') do %>
            Older Posts &raquo;
          <% end %>
        </div>
    </div>
  </div>
</div>
<hr />
